@model InstagarmBot.Models.user
@{
    ViewBag.removedDiv = "index";
}
<div class="Row">
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">   تنظیمات ربات       </h3>
            </div>
            <div class="box-body">
                <div class="row">
                    <form id="frmbot" method="post">


                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group col-sm-2 col-md-offset-4">
                            <label for="Username">  نام کاربری اینستاگرام  </label>
                            <input type="text" asp-for="InstagramUserName" value="@Model.InstagramUserName" id="Username" class="form-control" placeholder="نام کاربری">
                        </div>
                        <div class="form-group col-sm-2 ">
                            <label for="Password"> رمز عبور  </label>
                            <input type="password" asp-for="InstagramPassword" id="Password" value="@Model.InstagramPassword" class="form-control" placeholder="رمز عبور ">
                        </div>

                        <div class="form-group col-sm-4 col-sm-offset-4">
                            <br />
                            <input id="start" type="submit" class="form-control btn btn-danger" value="تایید" />
                        </div>

                    </form>
                </div>
            </div>
            <!-- /.box-body -->


        </div>

        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h5 class="box-title">وضعیت ربات :</h5>
                </div>
                <div class="box box-body">

                    <p>@(Model.BotState ? "در حال اجرا" : "خاموش") </p>
                    @if (Model.BotState)
                    {
                        <form method="post" asp-action="StopBot">
                            <button class="btn btn-block btn-danger" type="submit">خاموش کردن</button>
                        </form>
                    }
                    else
                    {

                        <a href="/userarea/panel/GetReports" class="btn  btn-block btn-info">دریافت گزارشات </a>

                    }


                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    @if (ViewBag.IsUpdate != null)
    {
        if (ViewBag.IsUpdate == true)
        {
            <script>
                toastr.warning('نام کاربری ورمز عبور تغییر کرد');
            </script>
        }
        else
        {
            <script>
                toastr.error('مشکلی بوجود آمد');
            </script>
        }
    }

}




